<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.myrestaurant">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PrawnSoup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SoupDetails"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PepperoniPizza"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChickenPizza"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PenninePasta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TomatoPasta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Delicacies"
            android:label="@string/title_activity_delicacies"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>